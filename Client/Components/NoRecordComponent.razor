@using Microsoft.Extensions.Localization;@inject IStringLocalizer<NoRecordComponent> Localizer;<RadzenRow>    <RadzenColumn Size="12">        <RadzenStack AlignItems="AlignItems.Center" Style="margin: 3rem;max-width:1500px">            <RadzenText Text=@EmptyText Style="color: lightgrey; font-size: 24px; text-align: center; width: 100%; font-style: italic;" />            @if (ShowAddButton)            {                <RadzenButton Text=@ButtonText Click="@ButtonClick" Variant="Variant.Text" />            }        </RadzenStack>    </RadzenColumn></RadzenRow>