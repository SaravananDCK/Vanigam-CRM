@using Microsoft.Extensions.Localization;
@inject IStringLocalizer<DetailPageTitleComponent> Localizer;
<PageTitle>@TitleText</PageTitle>
<RadzenRow AlignItems="AlignItems.Center">
    <RadzenColumn Size="@Size" SizeMD=@FirstSizeMD>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Class="material-symbols">
            <RadzenIcon Visible="!string.IsNullOrEmpty(Icon)" Icon="@Icon" Style="font-size:1.5rem" IconColor="var(--rz-primary)"></RadzenIcon>
            <VanigamAccountingTitleText Text=@TitleText />
            @CustomTitles
            @CustomBadge
        </RadzenStack>
    </RadzenColumn>
    <RadzenColumn Size="@Size" SizeMD=@MiddleSizeMD>
        <RadzenStack AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center">
            @RadioButtons
        </RadzenStack>
    </RadzenColumn>
    <RadzenColumn Size="@Size" SizeMD=@LastSizeMD>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
            @DropDowns
            @CustomButtons
            <div class="close-button-wrapper">
                <RadzenButton Click=@OnCloseClick Icon="close" Size="ButtonSize.Small"
                              ButtonStyle="ButtonStyle.Danger" Variant="Variant.Flat" class="modern-close-btn" />
            </div>
        </RadzenStack>
    </RadzenColumn>
</RadzenRow>
<DetailPageCommonComponent TitleText="@TitleText" DialogService="@DialogService" CanEdit="@CanEdit" HasChanges="@HasChanges" CurrentOid="@CurrentOid" />
<style>
    /* Modern close button */
    .close-button-wrapper {
        position: absolute;
        top: 16px;
        right: 16px;
        z-index: 10;
    }

    .modern-close-btn {
        background: rgba(239, 68, 68, 0.1) !important;
        backdrop-filter: blur(10px) !important;
        border: 1px solid rgba(239, 68, 68, 0.2) !important;
        border-radius: 50% !important;
        width: 32px !important;
        height: 32px !important;
        min-width: 32px !important;
        color: #dc2626 !important;
        transition: var(--transition-fast) !important;
    }

        .modern-close-btn:hover {
            background: rgba(239, 68, 68, 0.2) !important;
            transform: translateY(-1px) scale(1.1);
            box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
        }
</style>