@page "/materialusages"
@using Vanigam.CRM.Objects.Entities
@inherits Vanigam.CRM.Client.Components.BaseListView<MaterialUsage, MaterialUsages>
@attribute [Authorize(Policy = Vanigam.CRM.Objects.ApplicationPolicy.IsAdministrator)]
@inject MaterialUsageApiService MaterialUsageApiService

@* Parameters for embedded mode *@
@code {
    [Parameter] public Guid? JobId { get; set; }
    [Parameter] public Guid? InventoryItemId { get; set; }
    [Parameter] public bool IsEmbeddedMode { get; set; } = false;
    [Parameter] public string? EmbeddedTitle { get; set; }
}

<RadzenStack>
    <ListPageTitleComponent TitleText=@(IsEmbeddedMode ? EmbeddedTitle ?? Localizer["Material Usages"] : Localizer["MaterialUsages"])
                                AddButtonClick=@AddButtonClick
                                SearchButtonClick=@Search
                                ShowAdd=@(!IsEmbeddedMode || JobId.HasValue || InventoryItemId.HasValue) />
    <RadzenRow>
        <RadzenColumn SizeMD=12 class="datagrid-container-standard">
            <VanigamAccountingDataGrid @ref="GridControl" AllowColumnPicking="@AllowColPick" Data="@DataSource" Count=Count TItem="MaterialUsage" VanigamAccountingLoadData=@GridLoadData RowDoubleClick="@EditRow" @bind-Settings="@Settings" PageSize="@PageSize" PageSizeOptions="@PageSizeOptions" LoadSettings="@LoadSettings">
                <EmptyTemplate>
                    <NoRecordComponent ShowAddButton="false" />
                </EmptyTemplate>
                <Columns>
                    <RadzenDataGridColumn TItem="MaterialUsage" Filterable="false" Sortable="false" Width="120px" Title="@Localizer["Actions"]">
                        <Template Context="materialusage">
                            <OpenPageCommonComponent T="MaterialUsage" OpenObject="@materialusage" Open="@Open"></OpenPageCommonComponent>
                            <DeletePageCommonComponent T="MaterialUsage" UsingObject="@materialusage" GridDeleteButtonClick="@GridDeleteButtonClick"></DeletePageCommonComponent>
                        </Template>
                        <FooterTemplate>@Localizer["Count"]: <b>@Count</b></FooterTemplate>
                    </RadzenDataGridColumn>
                    @* Show Job column only when not embedded by Job *@
                    @if (!IsEmbeddedMode || !JobId.HasValue)
                    {
                        <RadzenDataGridColumn TItem="MaterialUsage" Property="Job.Title" Title=@Localizer["Job"]>
                            <Template Context="materialusage">
                                @materialusage.Job?.Title
                            </Template>
                        </RadzenDataGridColumn>
                    }
                    @* Show InventoryItem column only when not embedded by InventoryItem *@
                    @if (!IsEmbeddedMode || !InventoryItemId.HasValue)
                    {
                        <RadzenDataGridColumn TItem="MaterialUsage" Property="InventoryItem.Name" Title=@Localizer["InventoryItem"]>
                            <Template Context="materialusage">
                                @materialusage.InventoryItem?.Name
                            </Template>
                        </RadzenDataGridColumn>
                    }
                    <RadzenDataGridColumn TItem="MaterialUsage" Property=@nameof(MaterialUsage.Quantity) Title=@Localizer["Quantity"]>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="MaterialUsage" Property=@nameof(MaterialUsage.Oid) Title=@Localizer["Oid"] Visible="false">
                    </RadzenDataGridColumn>
                </Columns>
            </VanigamAccountingDataGrid>
        </RadzenColumn>
    </RadzenRow>
</RadzenStack>