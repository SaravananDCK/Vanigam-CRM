@page "/timesheets"
@using Vanigam.CRM.Objects.Entities
@inherits Vanigam.CRM.Client.Components.BaseListView<TimeSheet, TimeSheets>
@attribute [Authorize(Policy = Vanigam.CRM.Objects.ApplicationPolicy.IsAdministrator)]
@inject TimeSheetApiService TimeSheetApiService

@* Parameters for embedded mode *@
@code {
    [Parameter] public Guid? JobId { get; set; }
    [Parameter] public Guid? TechnicianId { get; set; }
    [Parameter] public bool IsEmbeddedMode { get; set; } = false;
    [Parameter] public string? EmbeddedTitle { get; set; }
}

<RadzenStack>
    <ListPageTitleComponent TitleText=@(IsEmbeddedMode ? EmbeddedTitle ?? Localizer["TimeSheets"] : Localizer["TimeSheets"])
                                AddButtonClick=@AddButtonClick
                                SearchButtonClick=@Search
                                ShowAdd=@(!IsEmbeddedMode || JobId.HasValue || TechnicianId.HasValue) />
    <RadzenRow>
        <RadzenColumn SizeMD=12 class="datagrid-container-standard">
            <VanigamAccountingDataGrid @ref="GridControl" AllowColumnPicking="@AllowColPick" Data="@DataSource" Count=Count TItem="TimeSheet" VanigamAccountingLoadData=@GridLoadData RowDoubleClick="@EditRow" @bind-Settings="@Settings" PageSize="@PageSize" PageSizeOptions="@PageSizeOptions" LoadSettings="@LoadSettings">
                <EmptyTemplate>
                    <NoRecordComponent ShowAddButton="false" />
                </EmptyTemplate>
                <Columns>
                    <RadzenDataGridColumn TItem="TimeSheet" Filterable="false" Sortable="false" Width="120px" Title="@Localizer["Actions"]">
                        <Template Context="timesheet">
                            <OpenPageCommonComponent T="TimeSheet" OpenObject="@timesheet" Open="@Open"></OpenPageCommonComponent>
                            <DeletePageCommonComponent T="TimeSheet" UsingObject="@timesheet" GridDeleteButtonClick="@GridDeleteButtonClick"></DeletePageCommonComponent>
                        </Template>
                        <FooterTemplate>@Localizer["Count"]: <b>@Count</b></FooterTemplate>
                    </RadzenDataGridColumn>
                    @* Show Job column only when not embedded by Job *@
                    @if (!IsEmbeddedMode || !JobId.HasValue)
                    {
                        <RadzenDataGridColumn TItem="TimeSheet" Property="Job.Title" Title=@Localizer["Job"]>
                            <Template Context="timesheet">
                                @timesheet.Job?.Title
                            </Template>
                        </RadzenDataGridColumn>
                    }
                    @* Show Technician column only when not embedded by Technician *@
                    @if (!IsEmbeddedMode || !TechnicianId.HasValue)
                    {
                        <RadzenDataGridColumn TItem="TimeSheet" Property="Technician.Name" Title=@Localizer["Technician"]>
                            <Template Context="timesheet">
                                @timesheet.Technician?.Name
                            </Template>
                        </RadzenDataGridColumn>
                    }
                    <RadzenDataGridColumn TItem="TimeSheet" Property=@nameof(TimeSheet.StartAt) Title=@Localizer["StartAt"]>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="TimeSheet" Property=@nameof(TimeSheet.EndAt) Title=@Localizer["EndAt"]>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="TimeSheet" Property=@nameof(TimeSheet.Hours) Title=@Localizer["Hours"]>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="TimeSheet" Property=@nameof(TimeSheet.Oid) Title=@Localizer["Oid"] Visible="false">
                    </RadzenDataGridColumn>
                </Columns>
            </VanigamAccountingDataGrid>
        </RadzenColumn>
    </RadzenRow>
</RadzenStack>