@page "/attachments"
@using Vanigam.CRM.Objects.Entities
@inherits Vanigam.CRM.Client.Components.BaseListView<Attachment, Attachments>
@attribute [Authorize(Policy = Vanigam.CRM.Objects.ApplicationPolicy.IsAdministrator)]
@inject AttachmentApiService AttachmentApiService

<RadzenStack>
    <ListPageTitleComponent TitleText=@(IsEmbeddedMode ? EmbeddedTitle ?? Localizer["Attachments"] : Localizer["Attachments"])
                            AddButtonClick=@AddButtonClick
                            SearchButtonClick=@Search
                            ShowAdd=@(!IsEmbeddedMode || JobReportId.HasValue) />
    <RadzenRow>
        <RadzenColumn SizeMD=12 class="datagrid-container-standard">
            <VanigamAccountingDataGrid @ref="GridControl" AllowColumnPicking="@AllowColPick" Data="@DataSource" Count=Count TItem="Attachment" VanigamAccountingLoadData=@GridLoadData RowDoubleClick="@EditRow" @bind-Settings="@Settings" PageSize="@PageSize" PageSizeOptions="@PageSizeOptions" LoadSettings="@LoadSettings">
                <EmptyTemplate>
                    <NoRecordComponent ShowAddButton="false" />
                </EmptyTemplate>
                <Columns>
                    <RadzenDataGridColumn TItem="Attachment" Filterable="false" Sortable="false" Width="120px" Title="@Localizer["Actions"]">
                        <Template Context="attachment">
                            <OpenPageCommonComponent T="Attachment" OpenObject="@attachment" Open="@Open"></OpenPageCommonComponent>
                            <DeletePageCommonComponent T="Attachment" UsingObject="@attachment" GridDeleteButtonClick="@GridDeleteButtonClick"></DeletePageCommonComponent>
                        </Template>
                        <FooterTemplate>@Localizer["Count"]: <b>@Count</b></FooterTemplate>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Attachment" Property="JobReport" Title=@Localizer["JobReport"] Visible="@(!IsEmbeddedMode)">
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Attachment" Property=@nameof(Attachment.FileName) Title=@Localizer["FileName"]>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Attachment" Property=@nameof(Attachment.ContentType) Title=@Localizer["ContentType"]>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Attachment" Property=@nameof(Attachment.Url) Title=@Localizer["Url"]>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Attachment" Property=@nameof(Attachment.Oid) Title=@Localizer["Oid"] Visible="false">
                    </RadzenDataGridColumn>
                </Columns>
            </VanigamAccountingDataGrid>
        </RadzenColumn>
    </RadzenRow>
</RadzenStack>

@code {
    [Parameter] public Guid? JobReportId { get; set; }
    [Parameter] public bool IsEmbeddedMode { get; set; } = false;
    [Parameter] public string? EmbeddedTitle { get; set; }
}