@page "/customers"
@using Vanigam.CRM.Objects.Entities
@inherits Vanigam.CRM.Client.Components.BaseListView<Customer, Customers>
@attribute [Authorize(Policy = Vanigam.CRM.Objects.ApplicationPolicy.IsAdministrator)]
@inject CustomerApiService CustomerApiService

<RadzenStack>
    <ListPageTitleComponent TitleText=@Localizer["Customers"] AddButtonClick=@AddButtonClick SearchButtonClick=@Search />
    <RadzenRow>
        <RadzenColumn SizeMD=12 class="datagrid-container-standard">
            <VanigamAccountingDataGrid @ref="GridControl" AllowColumnPicking="@AllowColPick" Data="@DataSource" Count=Count TItem="Customer" VanigamAccountingLoadData=@GridLoadData RowDoubleClick="@EditRow" @bind-Settings="@Settings" PageSize="@PageSize" PageSizeOptions="@PageSizeOptions" LoadSettings="@LoadSettings">
                <EmptyTemplate>
                    <NoRecordComponent ShowAddButton="false" />
                </EmptyTemplate>
                <Columns>
                    <RadzenDataGridColumn TItem="Customer" Filterable="false" Sortable="false" Width="120px" Title="@Localizer["Actions"]">
                        <Template Context="customer">
                            <OpenPageCommonComponent T="Customer" OpenObject="@customer" Open="@Open"></OpenPageCommonComponent>
                            <DeletePageCommonComponent T="Customer" UsingObject="@customer" GridDeleteButtonClick="@GridDeleteButtonClick"></DeletePageCommonComponent>
                        </Template>
                        <FooterTemplate>@Localizer["Count"]: <b>@Count</b></FooterTemplate>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Customer" Property=@nameof(Customer.Name) Title=@Localizer["Name"]>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Customer" Property=@nameof(Customer.Industry) Title=@Localizer["Industry"]>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Customer" Property=@nameof(Customer.Email) Title=@Localizer["Email"]>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Customer" Property=@nameof(Customer.Phone) Title=@Localizer["Phone"]>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Customer" Property=@nameof(Customer.Oid) Title=@Localizer["Oid"] Visible="false">
                    </RadzenDataGridColumn>
                </Columns>
            </VanigamAccountingDataGrid>
        </RadzenColumn>
    </RadzenRow>
</RadzenStack>