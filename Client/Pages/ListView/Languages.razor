@page "/languages"@using Vanigam.Accounting.Objects.Entities@inherits Vanigam.Accounting.Client.Components.BaseListView<Language, Languages>@attribute [Authorize(Policy = Vanigam.Accounting.Objects.ApplicationPolicy.IsAdministrator)]@inject LanguageApiService LanguageApiService<RadzenStack>    <ListPageTitleComponent TitleText=@Localizer["Languages"] AddButtonClick=@AddButtonClick SearchButtonClick=@Search />    <RadzenRow>        <RadzenColumn SizeMD=12 class="datagrid-container-standard">            <VanigamAccountingDataGrid @ref="GridControl" AllowColumnPicking="@AllowColPick" Data="@DataSource" Count=Count TItem="Language" VanigamAccountingLoadData=@GridLoadData RowDoubleClick="@EditRow" @bind-Settings="@Settings" PageSize="@PageSize" PageSizeOptions="@PageSizeOptions" LoadSettings="@LoadSettings">                <EmptyTemplate>                    <NoRecordComponent ShowAddButton="false" />                </EmptyTemplate>                <Columns>                    <RadzenDataGridColumn TItem="Language" Filterable="false" Sortable="false" Width="120px" Title="@Localizer["Actions"]">                        <Template Context="language">                            <OpenPageCommonComponent T="Language" OpenObject="@language" Open="@Open"></OpenPageCommonComponent>                            <DeletePageCommonComponent T="Language" UsingObject="@language" GridDeleteButtonClick="@GridDeleteButtonClick"></DeletePageCommonComponent>                        </Template>                        <FooterTemplate>@Localizer["Count"]: <b>@Count</b></FooterTemplate>                    </RadzenDataGridColumn>                    <RadzenDataGridColumn TItem="Language" Property=@nameof(Language.Code) Title=@Localizer["Code"]>                    </RadzenDataGridColumn>                    <RadzenDataGridColumn TItem="Language" Property=@nameof(Language.Name) Title=@Localizer["Name"]>                    </RadzenDataGridColumn>                    <RadzenDataGridColumn TItem="Language" Property=@nameof(Language.Description) Title=@Localizer["Description"]>                    </RadzenDataGridColumn>                    <RadzenDataGridColumn TItem="Language" Property=@nameof(Language.Oid) Title=@Localizer["Oid"] Visible="false">                    </RadzenDataGridColumn>                </Columns>            </VanigamAccountingDataGrid>        </RadzenColumn>    </RadzenRow></RadzenStack>