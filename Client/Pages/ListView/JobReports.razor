@page "/jobreports"
@using Vanigam.CRM.Objects.Entities
@inherits Vanigam.CRM.Client.Components.BaseListView<JobReport, JobReports>
@attribute [Authorize(Policy = Vanigam.CRM.Objects.ApplicationPolicy.IsAdministrator)]
@inject JobReportApiService JobReportApiService

@* Parameters for embedded mode *@
@code {
    [Parameter] public Guid? JobId { get; set; }
    [Parameter] public bool IsEmbeddedMode { get; set; } = false;
    [Parameter] public string? EmbeddedTitle { get; set; }
}

<RadzenStack>
    <ListPageTitleComponent TitleText=@(IsEmbeddedMode ? EmbeddedTitle ?? Localizer["Job Reports"] : Localizer["JobReports"])
                                AddButtonClick=@AddButtonClick
                                SearchButtonClick=@Search
                                ShowAdd=@(!IsEmbeddedMode || JobId.HasValue) />
    <RadzenRow>
        <RadzenColumn SizeMD=12 class="datagrid-container-standard">
            <VanigamAccountingDataGrid @ref="GridControl" AllowColumnPicking="@AllowColPick" Data="@DataSource" Count=Count TItem="JobReport" VanigamAccountingLoadData=@GridLoadData RowDoubleClick="@EditRow" @bind-Settings="@Settings" PageSize="@PageSize" PageSizeOptions="@PageSizeOptions" LoadSettings="@LoadSettings">
                <EmptyTemplate>
                    <NoRecordComponent ShowAddButton="false" />
                </EmptyTemplate>
                <Columns>
                    <RadzenDataGridColumn TItem="JobReport" Filterable="false" Sortable="false" Width="120px" Title="@Localizer["Actions"]">
                        <Template Context="jobreport">
                            <OpenPageCommonComponent T="JobReport" OpenObject="@jobreport" Open="@Open"></OpenPageCommonComponent>
                            <DeletePageCommonComponent T="JobReport" UsingObject="@jobreport" GridDeleteButtonClick="@GridDeleteButtonClick"></DeletePageCommonComponent>
                        </Template>
                        <FooterTemplate>@Localizer["Count"]: <b>@Count</b></FooterTemplate>
                    </RadzenDataGridColumn>
                    @* Show Job column only in standalone mode *@
                    @if (!IsEmbeddedMode)
                    {
                        <RadzenDataGridColumn TItem="JobReport" Property="Job.Title" Title=@Localizer["Job"]>
                            <Template Context="jobreport">
                                @jobreport.Job?.Title
                            </Template>
                        </RadzenDataGridColumn>
                    }
                    <RadzenDataGridColumn TItem="JobReport" Property=@nameof(JobReport.Notes) Title=@Localizer["Notes"]>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="JobReport" Property=@nameof(JobReport.Oid) Title=@Localizer["Oid"] Visible="false">
                    </RadzenDataGridColumn>
                </Columns>
            </VanigamAccountingDataGrid>
        </RadzenColumn>
    </RadzenRow>
</RadzenStack>