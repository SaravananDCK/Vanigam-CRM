@page "/edit-gpspoint"
@using Vanigam.CRM.Objects.Entities
@using Vanigam.CRM.Client.Validators
@inherits Vanigam.CRM.Client.Components.BaseDetailView<GPSPoint, EditGPSPoint>
@attribute [Authorize(Policy = Vanigam.CRM.Objects.ApplicationPolicy.IsAdministrator)]

<DetailPageCommonComponent TitleText="@Localizer["EditGPSPoint"]" DialogService="@DialogService" CanEdit="@CanEdit" HasChanges="@HasChanges" CurrentOid="@Oid" />
<RadzenColumn SizeMD=12>
    <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@ErrorVisible">@Localizer["SaveAlert"]</RadzenAlert>
    <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Warning" Visible="@ShowNotUniqueAlert">@Localizer["CodeMust"]</RadzenAlert>
    <RadzenTemplateForm @ref=Form EditContext="EditContext" TItem="GPSPoint" Data="@CurrentObject" Visible="@(CurrentObject != null && CanEdit)" Submit="@FormSubmit">
        <RadzenStack>
            <FluentValidationValidator Validator="new GPSPointValidator(Localizer)" />
            <ValidationSummary />
            <VanigamAccountingFormField Text=@Localizer["Latitude"]>
                <ChildContent>
                    <RadzenNumeric @bind-Value="@CurrentObject.Latitude" Name="numeric_Latitude" />
                </ChildContent>
            </VanigamAccountingFormField>
            <VanigamAccountingFormField Text=@Localizer["Longitude"]>
                <ChildContent>
                    <RadzenNumeric @bind-Value="@CurrentObject.Longitude" Name="numeric_Longitude" />
                </ChildContent>
            </VanigamAccountingFormField>
            <VanigamAccountingFormField Text=@Localizer["RecordedAt"]>
                <ChildContent>
                    <RadzenDatePicker @bind-Value="@CurrentObject.RecordedAt" Name="date_RecordedAt" ShowTime="true" />
                </ChildContent>
            </VanigamAccountingFormField>
            <VanigamAccountingFormField Text=@Localizer["Speed"]>
                <ChildContent>
                    <RadzenNumeric @bind-Value="@CurrentObject.Speed" Name="numeric_Speed" />
                </ChildContent>
            </VanigamAccountingFormField>
        </RadzenStack>
        <RadzenStack Style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
            <VanigamAccountingSaveButton Id="btn_Save" Text="@Localizer["Save"]" Disabled="@(!(Form.EditContext.IsModified()))" @bind-IsBusy="IsBusy" />
            <VanigamAccountingCancelButton Id="btn_Cancel" Text="@Localizer["Cancel"]" Click="@CancelButtonClick" />
        </RadzenStack>
    </RadzenTemplateForm>
</RadzenColumn>